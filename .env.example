# ============================================================================

# GitHub API token for repo_collector.py
GITHUB_TOKEN=

# NVD API key for cve_engine.py
# Get yours at: https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=

# FLLC.net API key for web frontend
FLLC_API_KEY=

# Shodan API for infrastructure search
SHODAN_API_KEY=

# Have I Been Pwned API v3
HIBP_API_KEY=

# Hunter.io email search
HUNTER_API_KEY=

# VirusTotal file/URL scanning
VIRUSTOTAL_API_KEY=

# AES-256 encryption key for report encryption
# Auto-generated if left empty
FLLC_ENCRYPT_KEY=

# Hours between CVE database polls
CVE_POLL_INTERVAL=6

# Minimum CVSS score for alerts (0.0 - 10.0)
CVE_SEVERITY_THRESHOLD=7.0

# Logging verbosity: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
